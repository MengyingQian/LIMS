body{padding-bottom: 0;}
.xiangqing{float: right;margin-right: 10px;color: #000;text-decoration: underline;}
.zan{float: right;background: url(../img/kongzan.png) no-repeat 5px center;margin-right: 10px;}
.zan2{float: right;background: url(../img/shizan.png) no-repeat 5px center;margin-right: 10px;}
.huifu{float: right;background: url(../img/xiaoxi.png) no-repeat 5px center;}
.zan,.zan2,.huifu{background-size: 16px auto;text-align: right;padding: 0 0 0 26px;}
.ui-btn, .ui-btn-lg, .ui-btn-s {background-color: #b1dae0;color: #fff;background-image:none;}
.ui-header-positive, .ui-footer-positive {color: #fff;}
.detail-header {height: auto;padding-bottom:10px;margin: 45px auto 0;}
.fenxiang img {width: 40px;position: fixed;top: 0;right: 10px;}
.detail-text p.s{height: 50px;background: url('../img/jiantou_03.png') no-repeat 97% 92%;
  background-size:15px 10px;}
.detail-text p.k{height: auto;background: url('../img/jiantou_04.png') no-repeat 97% 99%;
  background-size:15px 10px;}
 .ui-footer-btn{background: #f2f2f2;text-align: center;color: #b1dae0;font-weight: 500;}
.ui-btn-wrap{padding: 0;margin: 8px auto;height: 40px;width: 94%;border: 1px solid #b1dae0;
    border-radius: 5px;}
.ui-btn, .ui-btn-lg, .ui-btn-s {
    width: 100%;
    height: 40px;
    float: left;
    display: inline-block;
    position: relative;
    text-align: center;
    font-size: 16px;
    background-color: #fdfdfd;
    background-image: -webkit-gradient(linear,left top,left bottom,color-stop(0.5,#fff),to(#fafafa));
    vertical-align: top;
    color: #5FC2C9;
    -webkit-box-sizing: border-box;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
   }
.ui-btn:before, .ui-btn-lg:before{border: none;}
.detail-header .ui-list-img img {width: 100px;height: 100px; border-radius: 8px;}

.gengduo{width: 95.8%;margin: 0 auto; border:1px solid #f0f0f0; border-radius:6px; text-align:center;}
.button{width: 100%; background:#fff;border:0; outline: none; color: #5fc2c9; height:40px; line-height:40px;font-size:14px;}

