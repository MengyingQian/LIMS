html {font-size: 62.5%;}
a{ text-decoration:none; outline:none; color: #333;-webkit-tap-highlight-color:transparent;}
*{padding: 0; margin: 0; font-size: 0.7rem; font-family: "黑体"; list-style-type: none;  color: #333;}
 body{background: #f0f0f0; width: 100%; font-family: 黑体;font-family:Helvetica;}
 .top img{width: 100%; height: auto;margin: 45px auto 0;}
.main{ width:88.8%; margin: 0 auto; text-indent: 2em; line-height: 1rem; padding: 4rem 5.6% 2rem 5.6%; font-size: 0.7rem;}
.anniu{margin: 0 auto 20px; width: 80%;height: 7.5rem;}
.ui-btn, .ui-btn-lg, .ui-btn-s {
    width: 100%;
    height: 40px;
    line-height: 40px;
    display: block;
    text-align: center;
    font-size: 16px;
    background-color: #5FC2C9;
    background-image: none;
    vertical-align: top;border-radius: 5px;
    color: #fff;
    margin-top: 20px;
    -webkit-box-sizing: border-box;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
   }

