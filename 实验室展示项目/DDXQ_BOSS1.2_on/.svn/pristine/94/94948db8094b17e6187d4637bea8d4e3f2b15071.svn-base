 *{margin: 0; padding: 0; color: #333;}
body{font-family: 黑体; background: #f0f0f0; width: 100%; font-size: 0.7rem;
 padding-bottom: 1rem;}
html {font-size: 62.5%;}
.tupian{width: 100%; height: 5rem; background: #fff;}
.tupian img{width: 70%;height: 5rem;position: absolute;top: 0;left: 15%;}
a{text-decoration: underline; outline:none; color: #333;-webkit-tap-highlight-color:transparent;}
.txnr{width: 100%;margin: 0.3rem auto 5rem auto; padding: 0.35rem 0 0.7rem 0;}
.txnr span{line-height: 1.5rem; margin-left: 4.5%;}
#xxjs{width: 100%; height: 2.2rem;border: none; outline: none;font-size: 0.7rem;background: #FFFFFF;
padding-left: 4.5%;padding-right: 4.5%;line-height: 2.2rem;}
input{border: 0; outline: none;}
 .weui2_btn {
  width: 95.8%;
  display: block;
  height: 2.2rem;
  margin:  0 auto 1.4rem auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 0.7rem;
  text-align: center;
  text-decoration: none;
  color: #FFFFFF;
  line-height: 2.2rem;
  border-radius: 5px;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow: hidden;
}
.weui2_btn.weui2_btn_inline {
  display: inline-block;
}
.weui2_btn_default {
  background-color: #F7F7F7;
  color: #454545;
}
.weui2_btn_default:not(.weui2_btn_disabled):visited {
  color: #454545;
}
.weui2_btn_default:not(.weui2_btn_disabled):active {
  color: #A1A1A1;
  background-color: #DEDEDE;
}
.weui2_btn_primary {
  background-color: #04BE02;
}
.weui2_btn_primary:not(.weui2_btn_disabled):visited {
  color: #FFFFFF;
}
.weui2_btn_primary:not(.weui2_btn_disabled):active {
  color: rgba(255, 255, 255, 0.4);
  background-color: #039702;
}