 *{margin: 0; padding: 0; color: #333;}
body{font-family: 黑体; background: #fff; width: 100%; font-size: 0.7rem;}
html {font-size: 62.5%;}
a{ outline:none; color: #333;-webkit-tap-highlight-color:transparent;}
.bian img{width: 100%;}
.spacing{position: absolute; bottom: 1rem;width: 100%;}
input{border:0; outline:none;}
 .weui2_btn {
  width: 95.8%;
  display: block;
  height: 2.2rem;
  margin:  0 auto 1.4rem auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 0.7rem;
  text-align: center;
  text-decoration: none;
  color: #FFFFFF;
  line-height: 2.2rem;
  border-radius: 5px;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow: hidden;
}
.weui2_btn.weui2_btn_inline {
  display: inline-block;
}
.weui2_btn_default {
  background-color: #F7F7F7;
  color: #454545;
}
.weui2_btn_default:not(.weui2_btn_disabled):visited {
  color: #454545;
}
.weui2_btn_default:not(.weui2_btn_disabled):active {
  color: #A1A1A1;
  background-color: #DEDEDE;
}
.weui2_btn_primary {
  background-color: #04BE02;
}
.weui2_btn_primary:not(.weui2_btn_disabled):visited {
  color: #FFFFFF;
}
.weui2_btn_primary:not(.weui2_btn_disabled):active {
  color: rgba(255, 255, 255, 0.4);
  background-color: #039702;
}